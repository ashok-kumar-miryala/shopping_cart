<div class="center jumbotron">
          <div class="col-sm-12  col-md-4">
          <%= button_to "Continue Shopping", root_path , class: "btn btn-block btn-light" , method: :get%>
        </div>
  <h2>
    <% if params[:search].blank? %>

      <%if current_user.admin? %>
        WELCOME ADMIN USER --- All Orders (<%= @orders.count %>)
      <%else%>
        WELCOME USER --- All Orders (<%= current_user.orders.count %>)
      <%end%>
    <%else %>
      Found => [
      <%= pluralize(@orders.count, " ] Order") %>
    <%end %>
  </h2>
</div>

<% @orders.each do |order| %>

  <% if current_user.admin? %>

    <%= render 'order' , :order => order%>

    <% elsif order.user_id == current_user.id %>

      <%= render 'order' , :order => order%>

    <%end%>
  <% end %>

          <div class="col-sm-12  col-md-4">
          <%= button_to "Continue Shopping", root_path , class: "btn btn-block btn-light" , method: :get%>
        </div>